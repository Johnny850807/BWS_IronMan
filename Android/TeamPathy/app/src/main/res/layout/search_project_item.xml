<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_id_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="@dimen/item_margin_top"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/app_textword_color"
    app:cardCornerRadius="12dp"
    app:cardElevation="50dp"
    app:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/project_icon_searchProject_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/member_head_icon_id_card_size"
                android:layout_weight="4"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"  />

            <TextView
                android:id="@+id/project_title_searchProject_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="TeamPathy"
                android:textColor="@color/app_black_word_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/joinBTN_searchProject_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/join" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_description"
                android:textColor="#3e9bec"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/project_description_searchProject_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="行動化團隊合作系統"
                android:textColor="@color/app_black_word_color" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>