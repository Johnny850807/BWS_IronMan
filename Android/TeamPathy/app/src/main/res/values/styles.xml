<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamPathy" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/app_textword_color</item>
    </style>

    <style name="TeamPathyTextView">
        <item name="android:textColor">@color/app_textword_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TeamPathy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TeamPathy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
