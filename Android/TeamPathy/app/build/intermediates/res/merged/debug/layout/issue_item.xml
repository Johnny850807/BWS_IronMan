<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/issue_card_height"
    app:cardElevation="50dp"
    app:contentPadding="15dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/app_textword_color"
    android:layout_marginTop="@dimen/item_margin_top"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datetime_text_issue_item"
                android:text="2017 21 Apr "
                android:layout_weight="1"
                android:textColor="@color/app_hint_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:id="@+id/author_text_issue_item"
                android:text="林宗億"
                android:layout_weight="5"
                android:textColor="#646464"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/datetime_text_issue_item"
                android:layout_toEndOf="@+id/datetime_text_issue_item"
                android:layout_marginStart="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:id="@+id/title_text_issue_item"
                android:text="功能"
                android:textColor="@color/app_black_word_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="end"
                android:id="@+id/type_text_issue_item"
                android:text="投票"
                android:textColor="@color/app_hint_color"/>

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>